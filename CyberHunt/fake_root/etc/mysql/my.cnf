[mysqld]
user            = mysql
pid-file        = /var/run/mysqld/mysqld.pid
socket          = /var/run/mysqld/mysqld.sock
port            = 3306
basedir         = /usr
datadir         = /var/lib/mysql
tmpdir          = /tmp
bind-address    = 0.0.0.0

# Security settings (INSECURE - for legacy compatibility)
skip-grant-tables = false
local-infile = ON

# Performance
max_connections = 500
query_cache_size = 64M

# Replication
server-id = 1
log_bin = /var/log/mysql/mysql-bin.log
binlog_do_db = cyberhunt_prod

